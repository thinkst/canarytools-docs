@require '~vuepress-plugin-tabs/dist/themes/default.styl'
@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:300,400,500,700')

html, body
    font-family: 'Avenir', Helvetica, Arial, sans-serif

main 
    & img
        padding: 10px
        border-style: solid 
        border-width: 1px
        border-color: $borderColor

* 
  transition: background-color 0.5s ease

.site-name 
    background-color: inherit !important
    

.endpoints
    border: none
    box-shadow:  $boxShadow
    border-radius: 6px
    margin-bottom: 28px
    & .header
        border: none
        background-color: darken($codeBgColor, 15%)
        border-top-left-radius: 6px
        border-top-right-radius: 6px
        color: lighten($textColor, 65%)
        padding: 8px
        padding-left: 16px
        text-transform: uppercase
    & .content
        padding: 16px
        background-color: $codeBgColor
        border-bottom-left-radius: 6px
        border-bottom-right-radius: 6px

.endpoint .method
    display: inline-block
    width: 70px
    text-transform: uppercase
    &.POST
        color: #FFA72D
    &.GET
        color: #19a539
    &.DELETE
        color: $badgeErrorColor

.endpoint .url
    color: $accentColor

table
    width:100%
    table-layout: fixed
    display: table
    border-style: hidden;

thead
    background-color: $codeBgColor
    color: #ccc

tbody
    background-color: lighten($codeBgColor, 15%)
    color: #ccc
    & tr
    & tr:nth-child(2n) 
        background-color: lighten($codeBgColor, 15%)
    
td, th 
    overflow: scroll;

table tr:last-child td:first-child 
    border-bottom-left-radius: 6px

table tr:last-child td:last-child 
    border-bottom-right-radius: 6px

table tr:first-child th:first-child 
    border-top-left-radius: 6px

table tr:first-child th:last-child 
    border-top-right-radius: 6px

.api-example-response-header
    position: relative
    z-index: 1
    margin-bottom: -1.25em
    padding: 6px
    padding-left: 12px
    border-top-left-radius: 6px
    border-top-right-radius: 6px
    background-color: lighten($codeBgColor, 15%)
    color: lighten($textColor, 45%)
    text-transform: uppercase

.api-example-response [class*="language-"] 
    background-color: lighten($codeBgColor, 25%)
    color: lighten($textColor, 45%)
    & pre
        padding-left: 1.5rem !important 
    & .line-numbers-wrapper
        display: none !important 
    
.tabs-component-tabs
    justify-content: flex-end
    background-color: darken($codeBgColor, 15%)
    border-top: none 
    border-bottom-left-radius: 0
    border-bottom-right-radius: 0

.tabs-component-tab
    background-color: darken($codeBgColor, 15%)
    color: lighten($textColor, 45%)
    margin: 0
    border: none
    &:hover:not(.is-active)
        color: lighten($textColor, 65%)
    &.is-active
        background-color: $codeBgColor

.tabs-component-panels
    padding: 0
    border: none
    border-radius: 6px
    border-top-left-radius: 0
    border-top-right-radius: 0
    & .tabs-component-panel [class*="language-"] 
        margin: 0
        border-top-right-radius: 0
        border-top-left-radius: 0

div[class*="language-"].line-numbers-mode
    & pre
        padding-left: 3rem
        padding-bottom: 0rem
    & .line-numbers-wrapper
        width: 2.5rem
    &:after
        width: 0rem
        border: none

.code-copy svg
    margin-top: 1.5em
.code-copy span
    margin-top: 1.75em

div[class*=language-].line-numbers-mode .highlight-lines .highlighted:before
    display: none

.sidebar-group a.sidebar-link
    padding-left: 1.25rem !important

.custom-block.details
    background-color: inherit
    padding: 0
    & summary 
        display: inline-block
        padding: 10px
        border-radius: 6px
        background-color: lighten($codeBgColor, 15%)
        color: #ccc
        box-shadow:  $boxShadow

@media (max-width: 419px)
    .api-example-response-header 
        margin-left: -1.5rem
        margin-right: -1.5rem
        border-radius: 0    
    
    .tabs-component
        margin-left: -1.5rem
        margin-right: -1.5rem
    
    .tabs-component-tabs
        border: none
        border-bottom: solid 1px #ddd
        margin-bottom: 0px

    .code-copy svg
        opacity: 0.75 !important

    table
        width: auto
        margin-left: -1.5rem
        margin-right: -1.5rem

        & tr:last-child td:first-child 
        & tr:last-child td:last-child 
        & tr:first-child th:first-child 
        & tr:first-child th:last-child 
            border-radius: 0

@require './dark'

.theme-dark
    bgcolor()
    fontcolor()
    bordercolor()

html.theme-dark
    bgcolor() 
